# Requires: lockpick training box, lockpicks and trap removal tools

if findtype "strong box" backpack
    if skill "Lockpicking" < 100
        overhead 'Lockpicking' 88
        if findtype "lockpicks" backpack
            gumpclose
            dclicktype "strong box" backpack
            waitforgump 736038070
            gumpresponse 4
            waitforgump 736038070
            wait 4000
        else
            overhead "No lock picks!" 34
        endif
        
     if skill 'camping' < 100
         if not findtype "kindling" backpack
         overhead "Need more kindling" 34
         wait 5000
        replay
    endif
        
    if not findtype "campfire" ground 0 1 1
        dclicktype "kindling" backpack
    endif

    if skill 'hiding' < 100
        useskill 'hiding'
        wait 5000
        replay
    endif

    if skill "Remove Trap" < 100
        overhead 'Remove trap' 88
        if findtype "drill" backpack
            gumpclose 
            dclicktype "strong box" backpack
            waitforgump 736038070
            gumpresponse 7
            waitforgump 736038070
            wait 4000
        else
            overhead "No trap tools!" 34
        endif 
    endif
    
    loop
else
    overhead "No training box" 34
endif